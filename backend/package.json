{
  "name": "backend",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "node index.js",
    "test": "mocha test/*.test.js --exit",
    "test:all": "mocha test/*.test.js test/security-tests.js --exit",
    "security-tests": "mocha test/security-tests.js --exit",
    "test:coverage": "nyc --reporter=lcov --reporter=text mocha test/*.test.js test/security-tests.js --exit",
    "test:coverage:unit": "nyc --reporter=lcov --reporter=text mocha test/*.test.js --exit"
  },
  "nyc": {
    "all": true,
    "include": [
      "routes/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js"
    ],
    "exclude": [
      "test/**",
      "node_modules/**",
      "coverage/**"
    ],
    "reporter": [
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "./coverage"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "axios": "^1.13.2",
    "chai": "^5.3.3",
    "mocha": "^10.8.2",
    "nyc": "^17.1.0",
    "supertest": "^7.1.4"
  }
}
